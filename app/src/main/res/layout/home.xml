<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <View
        android:id="@+id/image_1"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="308dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo"
        />

    <TextView
        android:id="@+id/hi_username"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|top"
        android:textColor="#065143"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/image_button1"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/smart_bin1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="233dp"
        android:text="Smart Recycling Assistant"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/image_button2"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_below="@id/image_button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="273dp"
        android:background="@drawable/smart_bin2"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="409dp"
        android:text="Locate nearst bin"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/image_button3"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_below="@id/image_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/smart_bin3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="580dp"
        android:text="How to recycle?"
        android:textSize="25sp"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/score"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/image_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/s" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/image_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/profile" />

    <ImageButton
        android:id="@+id/sett"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/image_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/sett" />


</RelativeLayout>