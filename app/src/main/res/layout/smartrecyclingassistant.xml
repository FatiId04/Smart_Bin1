<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/img" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="543dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="left|center"
            android:text="\n Let us introduce you to our smart bin! \n"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#065143"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Bin is a smart bin that uses technology to improve waste management, this machine allows the recycling of a
efficient way, and which also encourages people to dispose of waste where it belongs, through a mobile application that the user uses
to earn points, his points turn into a sum of money as a means of encouragement"
            android:textColor="@color/black"
            android:textSize="19dp"
            />
    </LinearLayout>
</RelativeLayout>

