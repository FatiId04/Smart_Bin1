<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="550dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        app:srcCompat="@drawable/smart" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="550dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="411dp"
            android:layout_height="89dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:gravity="left|center"
            android:padding="0dp"
            android:layout_marginLeft="20dp"
            android:text="Let us introduce you to our smart bin!"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="346dp"
            android:layout_marginLeft="20dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Smart Bin is a smart bin that uses technology to improve waste management, this machine allows the recycling of a
efficient way, and which also encourages people to dispose of waste where it belongs, through a mobile application that the user uses
to earn points, his points turn into a sum of money as a means of encouragement."
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>
</RelativeLayout>

